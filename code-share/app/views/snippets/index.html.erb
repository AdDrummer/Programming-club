<div class="row">
  <div class="col-md-6"><%= render "new" %></div>
  <div class="col-md-6">
    <h1>Сохраненные сниппеты</h1>    
    <table class="table table-striped">
      <tr>
        <th>Открыть </th>
        <th>Название </th>
        <th>Автор </th>
        <th>Создан</th>
      </tr>
     
      <% @snippets.each do |snippet| %>
        <tr>
          <td><%= link_to snippet.id, snippet_path(snippet), :class => "btn btn-primary" %></td>
          <td><%= snippet.title %></td>
          <td><%= snippet.author %></td>
          <td><%= snippet.updated_at %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>




