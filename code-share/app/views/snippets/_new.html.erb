<h1>Новый сниппет</h1>
<%= form_for :snippet,  url: snippets_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, :rows => 20,:cols => 80 %>
  </p>
 
  <p>
    <%= f.submit "Сохранить сниппет" %>
  </p>
<% end %>